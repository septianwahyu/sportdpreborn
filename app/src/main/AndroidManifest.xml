<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quick.sportdbreborn">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/sport"
        android:label="@string/app_name"
        android:roundIcon="@drawable/sport"
        android:supportsRtl="true"
        android:theme="@style/Theme.SportDBReborn">
        <activity android:name=".LeagueDetailsActivity">

        </activity>
        <activity
            android:name=".TeamProfileActivity"
            android:label="@string/title_activity_team_profile"
            android:theme="@style/Theme.SportDBReborn.NoActionBar">

        </activity>
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        <meta-data android:name="android.app.searchable"
            android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StandingsActivity"
            android:screenOrientation="landscape">

        </activity>
    </application>

</manifest>